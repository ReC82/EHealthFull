@page
@model EhealthV2.Models.Users.ViewsHandlers.ClinicsViewModel


<style>
    .table-bordered tbody tr:hover {
        background-color: #dcdcdc !important;
    }

    .table-bordered tbody tr:nth-child(odd):hover {
        background-color: #dcdcdc !important;
    }

    .table-bordered tbody tr:nth-child(even):hover {
        background-color: #f5f5f5 !important;
    }

    .table-bordered tbody a {
        text-decoration: none;
        color: #333; /* Set your desired link color */
        display: block;
        width: 100%;
        height: 100%;
    }
</style>

<h2>Clinics List</h2>

<table>
    <thead>
        <tr>
            <th>Clinic Name</th>
            <th>Clinic Address</th>
            <!-- Add other columns as needed -->
        </tr>
    </thead>
    <tbody>
        @foreach (var clinic in Model.ClinicList)
        {
            <tr>
                <td>@clinic.clinicName</td>
                <td>@clinic.clinicAddress</td>
                <!-- Add other cells as needed -->
            </tr>
        }
    </tbody>
</table>
