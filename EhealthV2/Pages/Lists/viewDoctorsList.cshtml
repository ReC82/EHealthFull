@page
@model EhealthV2.Models.Users.ViewsHandlers.DoctorsViewModel


<style>
    .table-bordered tbody tr:hover {
        background-color: #dcdcdc !important;
    }

    .table-bordered tbody tr:nth-child(odd):hover {
        background-color: #dcdcdc !important;
    }

    .table-bordered tbody tr:nth-child(even):hover {
        background-color: #f5f5f5 !important;
    }

    .table-bordered tbody a {
        text-decoration: none;
        color: #333; /* Set your desired link color */
        display: block;
        width: 100%;
        height: 100%;
    }
</style>


    <h3>Doctors List</h3>
    <form method="get" action="">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Search" aria-label="Search" aria-describedby="basic-addon2" name="searchTerm">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit">Search</button>
            </div>
        </div>
    </form>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    <!-- Doctor First Name -->
                    @Html.DisplayNameFor(model => model.DoctorsList[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DoctorsList[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DoctorsList[0].Email)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.DoctorsList)
            {
                <tr onmouseover="this.style.backgroundColor='#dcdcdc';" onmouseout="this.style.backgroundColor=this.rowIndex % 2 === 0 ? '' : '#f5f8f5';">
                    <td>
                        <a asp-page="" asp-route-id="@item.DocId">
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </a>
                    </td>
                    <td>
                        <a asp-page="" asp-route-id="@item.DocId">
                            @Html.DisplayFor(modelItem => item.LastName)
                        </a>
                    </td>
                    <td>
                        <a asp-page="" asp-route-id="@item.DocId">
                            @Html.DisplayFor(modelItem => item.Email)
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
